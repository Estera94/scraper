// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String
  credits           Int      @default(0)
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  payments         Payment[]
  companies        Company[]
  companyNotes     CompanyNote[]
  scrapeBatches    ScrapeBatch[]
  customStatuses   UserCustomStatus[]

  @@map("users")
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripePaymentId String   @unique
  amount          Int      // Amount in cents
  credits         Int      // Credits purchased
  status          String   // pending, completed, failed
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model Company {
  id             String   @id @default(cuid())
  userId         String
  domain         String
  displayName    String?
  status         String?
  latestSnapshot Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  scrapes CompanyScrape[]
  linkedin LinkedInProfile?
  notes   CompanyNote[]

  @@unique([userId, domain])
  @@map("companies")
}

model CompanyScrape {
  id         String   @id @default(cuid())
  companyId  String
  tool       String
  infoTypes  Json?
  results    Json?
  metadata   Json?
  createdAt  DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("company_scrapes")
}

model LinkedInProfile {
  id               String   @id @default(cuid())
  companyId        String   @unique
  companyUrl       String?
  headline         String?
  description      String?
  industry         String?
  followerCount    Int?
  employeeCountMin Int?
  employeeCountMax Int?
  headquarters     Json?
  website          String?
  logoUrl          String?
  lastScrapedAt    DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  company  Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  contacts LinkedInContact[]

  @@map("linkedin_profiles")
}

model LinkedInContact {
  id               String   @id @default(cuid())
  linkedinProfileId String
  fullName         String?
  title            String?
  location         String?
  email            String?
  emailStatus      String?
  linkedinUrl      String?
  connectionDegree String?
  metadata         Json?
  scrapedAt        DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  profile LinkedInProfile @relation(fields: [linkedinProfileId], references: [id], onDelete: Cascade)

  @@index([linkedinProfileId], map: "idx_linkedin_contacts_profile")
  @@map("linkedin_contacts")
}

model CompanyNote {
  id        String   @id @default(cuid())
  companyId String
  userId    String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("company_notes")
  @@index([companyId], map: "idx_company_notes_company")
}

model ScrapeBatch {
  id            String      @id @default(cuid())
  userId        String
  status        String      // pending, queued, processing, completed, failed
  totalJobs     Int
  completedJobs Int         @default(0)
  failedJobs    Int         @default(0)
  metadata      Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs ScrapeJob[]

  @@index([userId], map: "idx_scrape_batches_user")
  @@index([status], map: "idx_scrape_batches_status")
  @@map("scrape_batches")
}

model ScrapeJob {
  id         String   @id @default(cuid())
  batchId    String
  website    String
  infoTypes  Json     // array of info types
  status     String   // pending, queued, processing, completed, failed
  companyId  String?
  scrapeId   String?
  error      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  batch ScrapeBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@index([batchId], map: "idx_scrape_jobs_batch")
  @@index([status], map: "idx_scrape_jobs_status")
  @@map("scrape_jobs")
}

model UserCustomStatus {
  id        String   @id @default(cuid())
  userId    String
  label     String
  color     String   // hex color code or color name
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, label])
  @@map("user_custom_statuses")
}
